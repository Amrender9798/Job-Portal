<!-- views/jobs.ejs -->

<style>
  body {
    background-color: #e9ecef;
    font-family: 'Arial', sans-serif;
  }

  .navbar {
    background-color: #343a40;
    color: #fff;
    padding: 15px;
    border-radius: 5px;
  }

  .container {
    margin-top: 50px;
  }

  .card {
    background-color: #fff;
    border: 1px solid rgba(0, 0, 0, 0.125);
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s;
  }

  .card:hover {
    transform: scale(1.03);
  }

  .card-body {
    flex: 1;
  }

  .card-title {
    color: #007bff;
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  .card-text {
    color: #495057;
    margin-bottom: 5px;
  }

  .btn-success,
  .btn-danger,
  .btn-primary,
  .btn-warning {
    color: #fff;
  }

  .btn-success:hover,
  .btn-danger:hover,
  .btn-primary:hover,
  .btn-warning:hover {
    filter: brightness(90%);
  }

  .fas {
    margin-right: 5px;
  }

  .apply-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .apply-btn a {
    width: 100%;
  }

  .apply-btn a.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    margin-top: 5px;
  }

  .apply-btn a.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }
</style>

<!-- Rest of your HTML remains unchanged -->

<div class="container">
  <div class="mb-4 d-flex justify-content-between align-items-center navbar">
    <h2 class="d-inline-block">Available Jobs</h2>

    <div>
      <% if (userLoggedIn) { %>
        <a href="/add-job" class="btn btn-primary ml-2">
          <i class="fas fa-plus"></i> Add Jobs
        </a>
      <% } %>
      <a href="/" class="btn btn-success ml-2">
        <i class="fas fa-home"></i> Go to Home Page
      </a>
      <% if (userLoggedIn) { %>
        <a href="/logout" class="btn btn-danger ml-2">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      <% } %>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    <% Jobs.forEach(job => { %>
      <div class="col mb-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><i class="fas fa-briefcase"></i><%= job.role %></h5>
            <p class="card-text"><strong><i class="fas fa-building"></i> Company:</strong> <%= job.company %></p>
            <p class="card-text"><strong><i class="fas fa-map-marker-alt"></i> Location:</strong> <%= job.location %></p>
            <p class="card-text"><strong><i class="fas fa-dollar-sign"></i> Package:</strong> <%= job.package %></p>

            <div class="mb-3">
              <p class="card-text"><strong><i class="fas fa-tools"></i> Skills:</strong> <%= job.skills.join(', ') %></p>
            </div>

            <% if (userLoggedIn) { %>
              <div class="d-flex">
                <a href="/update-job/<%= job.id %>" class="btn btn-warning mr-2">
                  <i class="fas fa-pencil-alt"></i> Update
                </a>
                <a href="/delete-job/<%= job.id %>" class="btn btn-danger">
                  <i class="fas fa-trash"></i> Delete
                </a>
              </div>
            <% } else { %>
              <div class="apply-btn">
                <a href="/apply?fromJobs=true" class="btn btn-primary">
                  <i class="fas fa-check-circle"></i> Apply Now
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
