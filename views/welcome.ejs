<style>
  body {
    background-color: #e9ecef;;
  }

  .welcome-container {
    height: 100vh;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    color: #007bff;
  }

  .btn-container {
    margin-top: 2rem;
  }

  .btn-primary,
  .btn-success,
  .btn-danger {
    font-size: 1.5rem;
    padding: 1rem 2rem;
    border-radius: 10px;
    margin-right: 1rem;
    /* Added margin to create space between buttons */
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-success {
    background-color: #28a745;
    border-color: #28a745;
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  .btn-primary:hover,
  .btn-success:hover,
  .btn-danger:hover {
    filter: brightness(90%);
  }
</style>


  <div class="container d-flex flex-column align-items-center justify-content-center welcome-container">
    <h1>Welcome to the Job Portal</h1>

    <% if (userLoggedIn) { %>
      <!-- Display message and Logout button for logged-in recruiter -->
      <p>You are logged in as a Recruiter. Please logout to switch to Job Seeker.</p>
      <div class="btn-container mt-4">
        <a href="/logout" class="btn btn-danger btn-lg">Logout</a>
        <!-- Additional button to go to Jobs page -->
        <a href="/jobs" class="btn btn-primary btn-lg ml-2">Go to Jobs</a>
      </div>
      <% } else { %>
        <!-- Display Job Seeker and Recruiter buttons if not logged in as recruiter -->
        <div class="btn-container mt-4">
          <a href="/Jobs" class="btn btn-primary btn-lg">Job Seeker</a>
          <a href="/register" class="btn btn-success btn-lg ml-2">Recruiter</a>
        </div>
        <% } %>

  </div>

